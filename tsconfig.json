{
    "compilerOptions": {
        "allowJs": true,
        "declaration": true,
        "emitDeclarationOnly": true,
        "esModuleInterop": true,
        "target": "ESNext",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "skipLibCheck": true,
        "allowUmdGlobalAccess": true
    },
    "include": [
        "dist/open-props.module.js",
        "src/*"
    ],
    "exclude": [
        "node_modules",
        "src/*.src.js"
    ]
}
